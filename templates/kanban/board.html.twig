{# templates/kanban/board.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}{{ board.name }} - Kanban{% endblock %}

{% block body %}
{# Poprawiony layout - nazwa tablicy na górze w kontenerze #}
<div class="container mx-auto px-4 py-6">
    <div class="flex justify-between items-center mb-6">
        <h2 class="text-2xl font-bold text-gray-800">{{ board.name }}</h2>
        <button data-action="click->modal#openAddColumnModal"
                class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 transition-colors text-sm flex items-center">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
            Dodaj kolumnę
        </button>
    </div>
</div>

{# Kanban board bez kontenera - pełna szerokość #}
<div data-controller="drag-drop" 
     data-board-id="{{ board.id }}"
     class="kanban-board">
    
    {% for col in board.cols %}
        <div class="kanban-col flex flex-col relative group"
             data-drag-drop-target="column"
             data-col-id="{{ col.id }}">

        <div class="kanban-col-header flex justify-between items-center mb-4 relative"
             data-drag-drop-target="columnHeader">
            
            <div class="absolute -left-2 top-1/2 transform -translate-y-1/2 opacity-0 group-hover:opacity-100 transition-opacity cursor-move">
                <svg class="w-4 h-4 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M10 6a2 2 0 110-4 2 2 0 010 4zM10 12a2 2 0 110-4 2 2 0 010 4zM10 18a2 2 0 110-4 2 2 0 010 4z"></path>
                </svg>
            </div>

            <h3 class="font-bold text-lg cursor-pointer hover:text-blue-600 transition-colors flex-1"
                data-drag-drop-target="columnTitle"
                data-action="click->drag-drop#editColumnName"
                title="Kliknij aby edytować nazwę">
                {{ col.name }}
            </h3>

            <div class="flex items-center space-x-2">
                <span class="bg-gray-200 text-gray-700 px-2 py-1 rounded-full text-sm task-count">
                    {{ col.tasks|length }}
                </span>

                <div class="relative group/menu">
                    <button class="p-1 text-gray-400 hover:text-gray-600 opacity-0 group-hover:opacity-100 transition-opacity"
                            type="button">
                        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M10 6a2 2 0 110-4 2 2 0 010 4zM10 12a2 2 0 110-4 2 2 0 010 4zM10 18a2 2 0 110-4 2 2 0 010 4z"></path>
                        </svg>
                    </button>
                    
                    <div class="absolute right-0 top-full mt-1 w-48 bg-white rounded-md shadow-lg border border-gray-200 z-10 opacity-0 invisible group-hover/menu:opacity-100 group-hover/menu:visible transition-all">
                        <div class="py-1">
                            <button data-action="click->drag-drop#editColumnName"
                                    class="w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 flex items-center">
                                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                </svg>
                                Edytuj nazwę
                            </button>
                            {# USUNIĘTO warunek sprawdzający liczbę kolumn #}
                            <button data-action="click->drag-drop#deleteColumn"
                                    class="w-full text-left px-4 py-2 text-sm text-red-600 hover:bg-red-50 flex items-center">
                                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                </svg>
                                {% if col.tasks|length > 0 %}
                                    Usuń kolumnę ({{ col.tasks|length }} zadań)
                                {% else %}
                                    Usuń kolumnę
                                {% endif %}
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <button data-action="click->modal#open"
                data-col-id="{{ col.id }}"
                class="w-full mb-4 bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 transition-colors text-sm">
            + Dodaj zadanie
        </button>

        <div class="space-y-3 min-h-32 flex-grow overflow-y-auto" 
             data-drag-drop-target="tasksContainer">
            {% for task in col.tasks %}
                <div class="bg-white p-4 rounded-lg shadow-sm cursor-pointer hover:shadow-md transition-all duration-200 border-l-4 border-blue-400 kanban-task group/task"
                     data-drag-drop-target="card"
                     data-task-id="{{ task.id }}"
                     data-col-id="{{ col.id }}"
                     data-action="click->modal#openEditModal">
                    
                    <div class="flex items-start justify-between">
                        <div class="flex-1">
                            <h4 class="font-semibold text-gray-800 mb-2 pr-2">{{ task.title }}</h4>
                            {% if task.description %}
                                <p class="text-sm text-gray-600 line-clamp-3 mb-2">{{ task.description }}</p>
                            {% endif %}
                        </div>
                        
                        <div class="opacity-0 group-hover/task:opacity-100 transition-opacity cursor-move p-1">
                            <svg class="w-3 h-3 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M10 6a2 2 0 110-4 2 2 0 010 4zM10 12a2 2 0 110-4 2 2 0 010 4zM10 18a2 2 0 110-4 2 2 0 010 4z"></path>
                            </svg>
                        </div>
                    </div>
                    
                    <div class="mt-2 text-xs text-gray-400 flex justify-between items-center">
                        <span>{{ task.createdAt|date('d.m.Y H:i') }}</span>
                        <span class="text-blue-500 opacity-0 group-hover/task:opacity-100 transition-opacity">
                            Kliknij aby edytować
                        </span>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endfor %}

{# Sprawdź czy są jakiekolwiek kolumny #}
{% if board.cols|length == 0 %}
    <div class="empty-board-message">
        <svg class="w-16 h-16 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
        </svg>
        <h3>Brak kolumn</h3>
        <p>Ta tablica nie ma jeszcze żadnych kolumn. Dodaj pierwszą kolumnę aby zacząć organizować zadania.</p>
        <button data-action="click->modal#openAddColumnModal"
                class="inline-flex items-center px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
            Dodaj pierwszą kolumnę
        </button>
    </div>
{% endif %}
</div>

{# MODALE - pozostają bez zmian #}
<div data-modal-target="addColumnModal"
     class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50">
    <div class="bg-white p-6 rounded-lg max-w-md w-full mx-4">
        <h3 class="text-lg font-bold mb-4">Dodaj nową kolumnę</h3>

        <form data-modal-target="addColumnForm"
              data-action="submit->modal#submitAddColumnForm"
              method="post">

            <div class="mb-4">
                <label for="column_name" class="block text-sm font-medium text-gray-700 mb-2">
                    Nazwa kolumny
                </label>
                <input type="text"
                       id="column_name"
                       name="name"
                       required
                       class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                       placeholder="Wprowadź nazwę kolumny">
            </div>
            
            <div data-modal-target="addColumnErrors" class="text-red-600 text-sm mb-4"></div>

            <div class="flex justify-end space-x-3">
                <button type="button"
                        data-action="click->modal#closeAddColumnModal"
                        class="px-4 py-2 text-gray-600 bg-gray-200 rounded-md hover:bg-gray-300 transition-colors">
                    Anuluj
                </button>
                <button type="submit"
                        class="px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600 transition-colors">
                    Dodaj kolumnę
                </button>
            </div>
        </form>
    </div>
</div>

<div data-modal-target="modal"
     class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50">
    <div class="bg-white p-6 rounded-lg max-w-md w-full mx-4">
        <h3 class="text-lg font-bold mb-4">Dodaj nowe zadanie</h3>

        <form data-modal-target="form"
              data-action="submit->modal#submitForm"
              action="{{ path('kanban_add_task', {id: board.id}) }}"
              method="post">

            <input type="hidden" name="col_id" data-modal-target="colIdInput">

            <div class="mb-4">
                <label for="title" class="block text-sm font-medium text-gray-700 mb-2">
                    Tytuł zadania
                </label>
                <input type="text"
                       id="title"
                       name="title"
                       required
                       class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                       placeholder="Wprowadź tytuł zadania">
            </div>
            
            <div data-modal-target="taskErrors" class="text-red-600 text-sm mb-4"></div>

            <div class="mb-6">
                <label for="description" class="block text-sm font-medium text-gray-700 mb-2">
                    Opis (opcjonalny)
                </label>
                <textarea id="description"
                          name="description"
                          rows="3"
                          class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                          placeholder="Wprowadź opis zadania"></textarea>
            </div>

            <div class="flex justify-end space-x-3">
                <button type="button"
                        data-action="click->modal#close"
                        class="px-4 py-2 text-gray-600 bg-gray-200 rounded-md hover:bg-gray-300 transition-colors">
                    Anuluj
                </button>
                <button type="submit"
                        class="px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600 transition-colors">
                    Dodaj zadanie
                </button>
            </div>
        </form>
    </div>
</div>

<div data-modal-target="editModal"
     class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50">
    <div class="bg-white p-6 rounded-lg max-w-md w-full mx-4">
        <h3 class="text-lg font-bold mb-4">Edytuj zadanie</h3>

        <form data-modal-target="editForm"
              data-action="submit->modal#submitEditForm"
              method="post">

            <input type="hidden" name="_method" value="PUT">
            <input type="hidden" name="task_id" data-modal-target="editTaskId">

            <div class="mb-4">
                <label for="edit_title" class="block text-sm font-medium text-gray-700 mb-2">
                    Tytuł zadania
                </label>
                <input type="text"
                       id="edit_title"
                       name="title"
                       required
                       data-modal-target="editTitle"
                       class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
            </div>
            
            <div data-modal-target="editTaskErrors" class="text-red-600 text-sm mb-4"></div>

            <div class="mb-6">
                <label for="edit_description" class="block text-sm font-medium text-gray-700 mb-2">
                    Opis (opcjonalny)
                </label>
                <textarea id="edit_description"
                          name="description"
                          rows="3"
                          data-modal-target="editDescription"
                          class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"></textarea>
            </div>

            <div class="flex justify-between items-center">
                <div>
                    <button type="button"
                            data-action="click->modal#deleteTask"
                            class="px-4 py-2 bg-red-500 text-white rounded-md hover:bg-red-600 transition-colors">
                        Usuń zadanie
                    </button>
                </div>
                <div class="flex space-x-3">
                    <button type="button"
                            data-action="click->modal#closeEditModal"
                            class="px-4 py-2 text-gray-600 bg-gray-200 rounded-md hover:bg-gray-300 transition-colors">
                        Anuluj
                    </button>
                    <button type="submit"
                            class="px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600 transition-colors">
                        Zapisz zmiany
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>
{% endblock %}